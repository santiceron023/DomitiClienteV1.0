<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.danni.domiti.RegisterActivity"
android:background="@drawable/fondodown">

<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:shadowColor="@color/primary_text"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="25"
    android:text="Registro"
    android:textColor="@color/white"
    android:textSize="45dp"
    android:textStyle="bold" />


    <EditText
        android:id="@+id/eUsername"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.4"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:gravity="center"
        android:hint="Nombre Usuario"
        android:inputType="textVisiblePassword"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp" />

    <EditText
    android:id="@+id/eCelular"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.4"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:background="@drawable/recuadro"
    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
    android:drawablePadding="12dp"
    android:ems="10"
    android:gravity="center"
    android:hint="Celular"
    android:inputType="numberDecimal"
    android:maxLines="1"
    android:padding="8dp"
    android:textColor="@color/primary_text"
    android:textColorHint="@color/primary_text"
    android:textSize="20sp"
    android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/eDireccion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.4"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/ic_my_location_black_24dp"
        android:gravity="center"
        android:hint="Direccion"
        android:inputType="textVisiblePassword"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp" />
<EditText
    android:id="@+id/eEmail"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_weight="0.4"
    android:background="@drawable/recuadro"
    android:drawableLeft="@drawable/ic_email_black_24dp"
    android:gravity="center"
    android:hint="Correo Electrónico"
    android:inputType="textEmailAddress"
    android:textColor="@color/primary_text"
    android:textColorHint="@color/primary_text"
    android:textSize="20sp"
    android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ePass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.4"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ePass2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.4"
        android:background="@drawable/recuadro"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Repita Contraseña"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_marginBottom="80dp">
    <Button
        android:id="@+id/bLogin"
        android:onClick="bRegister"
        android:text="Registrar"
        android:textColor="#89ff93"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/botonlogin"
        android:shadowColor="#564982"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

</LinearLayout>
</LinearLayout>

