<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.danni.domiti.LoginActivity"
android:background="@drawable/domitilog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"></LinearLayout>


    <EditText
    android:id="@+id/eEmail"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.6"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:background="@drawable/recuadro"
     android:drawablePadding="12dp"
    android:drawableLeft="@drawable/ic_person_black_24dp"
    android:ems="10"
    android:hint="Correo Electrónico"
    android:gravity="center"
    android:inputType="textEmailAddress"
    android:maxLines="1"
    android:padding="8dp"
    android:textColor="@color/primary_text"
    android:textColorHint="@color/primary_text"
    android:textSize="20sp"
    android:layout_marginBottom="10dp"/>


<EditText
    android:id="@+id/ePass"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.6"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:background="@drawable/recuadro"
    android:drawableLeft="@drawable/ic_lock_black_24dp"
    android:drawablePadding="12dp"
    android:ems="10"
    android:gravity="center"
    android:hint="Contraseña"
    android:inputType="textPassword"
    android:maxLines="1"
    android:padding="8dp"
    android:textColor="@color/primary_text"
    android:textColorHint="@color/primary_text"
    android:textSize="20sp" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center">
    <Button
        android:id="@+id/bLogin"
        android:onClick="bLogin"
        android:text="Log In"
        android:textColor="#89ff93"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/botonlogin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:shadowColor="#564982"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        />

</LinearLayout>


<Button
    android:id="@+id/bRegister"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@android:color/transparent"
    android:onClick="bRegister"
    android:text="Registrarse"
    android:textAllCaps="false"
    android:textColor="@color/primary_text"
    android:textSize="20sp" />

</LinearLayout>

